{
  "name": "time-sync-monorepo",
  "private": true,
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-test-renderer": "19.1.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@expo/ngrok": "4.1.3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "dependencies": {
    "@react-native-community/datetimepicker": "^8.6.0",
    "dotenv": "^17.2.3",
    "expo-file-system": "~18.0.0",
    "expo-sharing": "~14.0.0"
  },
  "bundleDependencies": [
    "@react-native-community/datetimepicker",
    "expo-file-system",
    "expo-sharing"
  ]
}
